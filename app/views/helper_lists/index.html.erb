<% @page_title = "Worker Entries" %>

<%= link_to("<< Back to Table", {:controller => 'helper_tables' , :action => 'index'}, :class => 'back-link') %>

<div class="subjects index">
  <h2>List</h2>

  <%= link_to( image_tag('plus_sign.png', :size => '11x11', :alt => '+') + "Add New Member", {:action => 'new' , :helper_table_id => @helpertable.id}, :class => 'action new') %>
  <div> <%= pluralize(@helperlists.size, "entry") %> found </div>
  <table class="listing" summary="Subject list">
    <tr class="header">
      <th>&nbsp;</th>
      <th>Profession</th>
      <th>Name</th>
      <th>Actions</th>
      <th>Rating</th>
    </tr>
    <% @helperlists.each do |helperlist| %>
    <tr class="<%= cycle('odd', 'even') %>">   
      <td><%= helperlist.position %></td>
      <td><%= helperlist.helper_table.name if helperlist.helper_table %></td>
      <td><%= helperlist.first_name %> <%= helperlist.last_name %></td>

      <td class="actions">
        <%= link_to("Show", {:action => 'show', :id => helperlist.id , :helper_table_id => @helpertable.id}, :class => 'action show') %>
        <%= link_to("Edit", {:action => 'edit' , :id => helperlist.id , :helper_table_id => @helpertable.id}, :class => 'action edit') %>
        <%= link_to("Delete", {:action => 'delete' , :id => helperlist.id , :helper_table_id => @helpertable.id} , :class => 'action delete') %>
      </td>

      <td>&nbsp; &nbsp;<%=  helperlist.rating %></td>

    </tr>
    <% end %>
  </table>
</div>
